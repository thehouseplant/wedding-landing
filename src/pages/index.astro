---
import BaseLayout from '../layouts/BaseLayout.astro';
import Countdown from '../components/Countdown.astro';
import Agenda from '../components/Agenda.astro';
import Menu from '../components/Menu.astro';
import Map from '../components/Map.astro';
import Contact from '../components/Contact.astro';
const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="section has-text-centered">
    <h1 class="title">Christina and Sean</h1>
    <p class="subtitle">A little helper guide for our upcoming wedding dinner celebration.</p>
  </section>

  <section class="section has-text-centered">
    <Countdown />
  </section>

  <section class="section has-text-centered">
    <Agenda />
  </section>

  <section class="section has-text-centered">
    <Menu />
  </section>

  <section class="section">
    <div class="columns is-centered">
      <div class="column is-half">

      </div>
    </div>
  </section>

  <section class="section has-text-centered">
    <p class="title">Logistics</p>
    <Map 
      latitude={36.12208136325429}
      longitude={-115.16943833966151}
      zoom={15}
      tileLayer='https://tile.openstreetmap.org/36.12208136325429/-115.16943833966151/15.png'
      container="leaflet-map"
      tileLayer="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
      attribution="Â© <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors"
      containerstyle="width: 100%; height: 60vh"
    />
  </section>

  <section class="section has-text-centered">
    <Contact />
  </section>
</BaseLayout>